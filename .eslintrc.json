{
  "env": {
    "browser": true,
    "es6": true,
    "jest/globals": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "plugins": ["prettier", "jest"],
  "extends": ["eslint:recommended", "prettier"],
  "rules": {
    "prettier/prettier": ["error", { "singleQuote": true, "semi": false }],
    "max-len": ["warn", { "code": 80, "ignoreUrls": true }]
  }
}
